// 	Largest odd number in a string

#include <iostream>
#include <string>
using namespace std;

string largestOddNumber(string num) {
    for (int i = num.size() - 1; i >= 0; --i) {
        for (int j = i; j >= 0; --j) {
            string substr = num.substr(j, i - j + 1);
            int val = stoi(substr);
            if (val % 2 != 0) {
                return substr;
            }
        }
    }
    return "";
}

int main() {
    string num = "52";
    cout << "Input: " << num << endl;
    cout << "Output: " << largestOddNumber(num) << endl;

    num = "4206";
    cout << "Input: " << num << endl;
    cout << "Output: " << largestOddNumber(num) << endl;

    num = "35427";
    cout << "Input: " << num << endl;
    cout << "Output: " << largestOddNumber(num) << endl;

    return 0;
}
