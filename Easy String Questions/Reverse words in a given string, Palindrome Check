// Reverse words in a given string / Palindrome Check

#include <iostream>
#include <string>
using namespace std;

string reverseWords(string s) {
    string word;
    string reversed;

    for (int i = s.size() - 1; i >= 0; --i) {
        if (s[i] != ' ') {
            word = s[i] + word;
        } else if (!word.empty()) {
            reversed += word + " ";
            word.clear();
        }
    }
    if (!word.empty()) {
        reversed += word;
    }
    return reversed;
}

int main() {
    string s = "the sky is blue";
    cout << "Input: " << s << endl;
    cout << "Output: " << reverseWords(s) << endl;

    s = "  hello world  ";
    cout << "Input: " << s << endl;
    cout << "Output: " << reverseWords(s) << endl;

    s = "a good   example";
    cout << "Input: " << s << endl;
    cout << "Output: " << reverseWords(s) << endl;

    return 0;
}
